        <activity android:name=".ui.redpacket.activity.RedPacketActivity" />
        <activity android:name=".ui.redpacket.activity.RoomCardActivity" />
        <activity android:name=".ui.settings.SettingsActivity" />
        <activity android:name=".ui.settings.AccountsActivity" />
